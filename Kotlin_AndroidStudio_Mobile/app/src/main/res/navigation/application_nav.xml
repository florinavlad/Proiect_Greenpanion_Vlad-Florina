<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/application_nav"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.greenpanion.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.greenpanion.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.greenpanion.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.greenpanion.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mapPrizesFragment"
            app:destination="@id/mapPrizesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_howRecycleFragment"
            app:destination="@id/howRecycleFragment" />
        <action
            android:id="@+id/action_homeFragment_to_rankingFragment"
            app:destination="@id/rankingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_contactFragment"
            app:destination="@id/contactFragment" />
    </fragment>
    <fragment
        android:id="@+id/howRecycleFragment"
        android:name="com.example.greenpanion.HowRecycleFragment"
        android:label="fragment_how_recycle"
        tools:layout="@layout/fragment_how_recycle" />
    <fragment
        android:id="@+id/mapPrizesFragment"
        android:name="com.example.greenpanion.MapPrizesFragment"
        android:label="fragment_map_prizes"
        tools:layout="@layout/fragment_map_prizes" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.greenpanion.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" >
        <action
            android:id="@+id/action_statisticsFragment_to_manuallyAddPointsFragment"
            app:destination="@id/manuallyAddPointsFragment" />
    </fragment>
    <fragment
        android:id="@+id/manuallyAddPointsFragment"
        android:name="com.example.greenpanion.ManuallyAddPointsFragment"
        android:label="fragment_manually_add_points"
        tools:layout="@layout/fragment_manually_add_points" >
        <action
            android:id="@+id/action_manuallyAddPointsFragment_to_calculatePointsFragment"
            app:destination="@id/calculatePointsFragment" />
    </fragment>
    <fragment
        android:id="@+id/calculatePointsFragment"
        android:name="com.example.greenpanion.CalculatePointsFragment"
        android:label="fragment_calculate_points"
        tools:layout="@layout/fragment_calculate_points" >
        <action
            android:id="@+id/action_calculatePointsFragment_to_manuallyAddPointsFragment"
            app:destination="@id/manuallyAddPointsFragment" />
        <action
            android:id="@+id/action_calculatePointsFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />

    </fragment>
    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.example.greenpanion.RankingFragment"
        android:label="fragment_ranking"
        tools:layout="@layout/fragment_ranking" />
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.greenpanion.ContactFragment"
        android:label="fragment_contact"
        tools:layout="@layout/fragment_contact" />
</navigation>